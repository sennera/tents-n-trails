@model TentsNTrails.Models.ChangePrivacyViewModel
@{
    ViewBag.Title = "Change Privacy";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePrivacy", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.CurrentIsPrivate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @if (Model.CurrentIsPrivate)
            {
                <p>
                    Private (anonymous)
                </p>
            }
            else
            {
                <p>
                    Public (your name and profile can be viewed by others)
                </p>
            }
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewIsPrivate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.NewIsPrivate)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change privacy" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}