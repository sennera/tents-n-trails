@using Microsoft.AspNet.Identity
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        @Html.Raw("Hello " + User.Identity.GetUserName() + "!")
        <b class="caret"></b>
    </a>
    <ul class="dropdown-menu" id="noUnderline">
        <li>
            <a href="@Url.Action("Index", "Message")" title="My Messages">
                Messages&nbsp;@{Html.RenderAction("UnreadCount", "Message");}
            </a>
        </li>
        <li>@Html.ActionLink("Reviews", "Index", "Review")</li>
        <li>@Html.ActionLink("Bookmarked Locations", "Index", "LocationFlag")</li>
        <li>@Html.ActionLink("Connections", "Connections", "Profile")</li>
        @*<li><a href="@Url.Action("Index", "Profile")"><span class="glyphicon glyphicon-user"></span> My Profile</a></li>*@
        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
        {
            <li class="divider"></li>
            <li>@Html.ActionLink("User Management", "AdminControl", "Users")</li>
            <li>@Html.ActionLink("Join Locations", "Join", "Location")</li>
        }
    </ul>
</li>