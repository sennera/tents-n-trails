@model TentsNTrails.Models.Review

@{
    ViewBag.Title = "Write Review";
}

<h3>Write a Review for @ViewBag.Location.Label</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <p>
            Share your opinions with others! <br />
            Did you like this location? Was it scenic? Was it tidy or unkempt? Would you go again? What was your favorite part?<br />
            Least favorite part? How difficult was this location? Why was it that difficult? <br />
        </p>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label>
                    @Html.RadioButtonFor(x => x.Rating, "true") <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                </label> 
                &nbsp;&nbsp;&nbsp;&nbsp;
                <label>
                    @Html.RadioButtonFor(x => x.Rating, "false") <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
                </label> <br />
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 multi-line">
                @Html.TextAreaFor(model => model.Comment, 10, 55, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
