@model TentsNTrails.Models.Events

<!--DETAILS-->
<div style="min-height:@(ViewBag.size)">
    <span style="font-size: 16px;"><b>@Html.ActionLink(Model.Name, "Details", "Events", new { id = Model.EventID }, new { title = "View Details" })&nbsp;&nbsp;&nbsp;(@Model.Date.Month/@Model.Date.Day)</b></span>
    <br />
    @Html.ActionLink(Model.Location.Label, "Details", "Location", new { id = Model.LocationID }, new { title = "View Location" })
    <br />
    Organizer: @Model.Organizer.UserName
    <br />
    @Model.Participants.Count
    @if (Model.Participants.Count > 1 || Model.Participants.Count == 0)
    {
        @Html.Raw("people are going");
    }
    else
    {
        @Html.Raw("person is going");
    }
    @if (User.IsInRole("Admin"))
    {
        <span style="float:right">
            <button class="btn btn-default" title="Edit" onclick="location.href='@Url.Action("Edit", new { id = Model.EventID})'">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>
            <button class="btn btn-default" title="Delete" onclick="location.href='@Url.Action("Delete", new { id = Model.EventID})'">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
        </span>
    }
</div>
