@model TentsNTrails.Models.Location

@{
    ViewBag.Title = "Delete";
}

<h2>@Model.Label</h2>

<h4>Are you sure you want to delete this Location?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.State.Name)</dt>
        <dd>@Html.DisplayFor(model => model.State.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Latitude)</dt>
        <dd>@Html.DisplayFor(model => model.Latitude)</dd>

        <dt>@Html.DisplayNameFor(model => model.Longitude)</dt>
        <dd>@Html.DisplayFor(    model => model.Longitude)</dd>

        <dt>@Html.DisplayNameFor(model => model.DateCreated)</dt>
        <dd>@Html.DisplayFor(    model => model.DateCreated)</dd>

        <dt>@Html.DisplayNameFor(model => model.DateModified)</dt>
        <dd>@Html.DisplayFor(    model => model.DateModified)</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(    model => model.Description)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            &nbsp;
            <button class="btn btn-default" onclick="location.href='@Url.Action("Browse")'">Cancel</button>
        </div>
    }
</div>
