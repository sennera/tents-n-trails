@model TentsNTrails.Models.Message

@{
    ViewBag.Title = "New Message";
}

<h2>Send New Message</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <p>Type your message to @ViewBag.User.UserName here:</p>
    
    //@Html.Hidden("ToUser", (ApplictionUser)ViewBag.User);

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.MessageText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MessageText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <button class="btn btn-success" onclick="location.href='@Url.Action("Create",
                        "Message", new { username = ViewBag.User.UserName, profile = ViewBag.CameFromProfile })'" type="submit">
                    Send Message
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Profile Page", "Index", "Profile", new { username = ViewBag.UserName })
</div>
